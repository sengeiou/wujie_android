<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/shop_person_title_manage"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_centerInParent="true"
    android:background="@color/white"
    android:layout_centerHorizontal="true"
    android:orientation="horizontal">



        <TextView
            android:id="@+id/shop_shopkeeper"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/shop_title_choice_left"
            android:textColor="@color/white"
            android:paddingStart="15dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:paddingEnd="15dp"
            />
        <TextView
            android:id="@+id/shop_person"
            android:layout_width="wrap_content"
            android:background="@drawable/shop_title_unchoice_right"
            android:paddingStart="15dp"
            android:paddingTop="5dp"
            android:textColor="@color/red_tv_back"
            android:paddingBottom="5dp"
            android:paddingEnd="15dp"
            android:layout_height="wrap_content"
            />

</LinearLayout>