<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

<LinearLayout
android:layout_width="match_parent"
android:layout_height="wrap_content"
    android:orientation="vertical">

    <include layout="@layout/aty_title" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/bg_color" />

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_marginLeft="8dp"
                    android:id="@+id/imageview"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:padding="8dp" />

                <TextView
                    android:id="@+id/tv_good_name"
                    android:textSize="14dp"
                    android:text="测试商品名"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_marginLeft="8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingRight="30dp"
                    android:text="宝贝描述" />

                <RatingBar
                    android:id="@+id/goods_grade_rb"
                    style="@style/foodRatingBar"
                    android:layout_width="wrap_content"
                    android:layout_height="22dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="8dp"
                    android:isIndicator="false"
                    android:numStars="5"
                    android:rating="5.0"
                    android:stepSize="1" />
            </LinearLayout>

            <View
                android:layout_marginTop="8dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/bg_color" />

            <EditText

                android:id="@+id/evalusete_context_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:gravity="top"
                android:hint="宝贝满足你的期待吗？说说你的使用心得，分享给想买的他们吧(最多500字)"
                android:lines="5"
                android:maxLength="500"
                android:minLines="5"
                android:padding="8dp"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/ed_text_length"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:text="500" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/updata_pic_rv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="8dp"
                android:paddingRight="8dp" />


        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>

</LinearLayout>
    <TextView
        android:id="@+id/tv_submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="32dp"
        android:background="@drawable/shape_to_login_tv_shape"
        android:gravity="center"
        android:padding="12dp"
        android:layout_alignParentBottom="true"
        android:text="提交"
        android:textColor="@color/white" />
</RelativeLayout>