<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="300dp"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_gravity="center"
    android:layout_marginEnd="24dp"
    android:layout_marginStart="24dp"
    android:background="@drawable/shape_r_code_bg_hzj"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <TextView
        android:id="@+id/close_tv"
        tools:text="商家二维码：店铺选择"
        android:textColor="@color/app_text_color"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_r_code_bg_hzj"
        android:padding="8dp"/>
    <TextView
        android:id="@+id/jump_tv"
        android:text="跳过该操作,直接赠送"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:gravity="center"
        android:visibility="gone"
        android:textColor="@color/white"
        android:background="@color/red_tv_back"
        android:layout_alignParentBottom="true"/>
    <ListView
        android:id="@+id/listview"
        android:layout_above="@id/jump_tv"
        android:layout_below="@id/close_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>


</RelativeLayout>
