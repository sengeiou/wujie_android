<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="12dp"
        android:paddingStart="12dp"
        android:paddingTop="12dp">

        <cn.gavinliu.android.lib.shapedimageview.ShapedImageView
            android:id="@+id/headImg"
            android:layout_width="52dp"
            android:layout_height="52dp"
            android:src="@drawable/icon_temp_ptq_l"
            app:shape_mode="circle" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="69dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/nameTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="吃不瘦的胖子"
                android:textColor="#ff333333"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/descTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:textColor="#ff333333" />

        </LinearLayout>

        <TextView
            android:id="@+id/hasPassTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="12dp"
            android:text="已通过"
            android:textColor="#ff999999"
            android:textSize="17sp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/notPassTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:background="@drawable/shape_red_title_left_unselect"
            android:paddingBottom="6dp"
            android:paddingEnd="9dp"
            android:paddingStart="11dp"
            android:paddingTop="6dp"
            android:text="等待通过"
            android:textColor="#fff23030"
            android:textSize="15sp"
            android:visibility="gone" />

        <LinearLayout
            android:id="@+id/layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="12dp"
            android:visibility="gone">

            <TextView
                android:id="@+id/refuseTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_orange_3"
                android:paddingBottom="5dp"
                android:paddingEnd="13dp"
                android:paddingStart="13dp"
                android:paddingTop="5dp"
                android:text="拒绝"
                android:textColor="#ffff8400"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/agreeTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:background="@drawable/shape_red_btn_bg"
                android:paddingBottom="5dp"
                android:paddingEnd="13dp"
                android:paddingStart="13dp"
                android:paddingTop="5dp"
                android:text="接受"
                android:textColor="#fff23030"
                android:textSize="15sp" />
        </LinearLayout>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginStart="12dp"
        android:background="@color/line_color" />
</LinearLayout>