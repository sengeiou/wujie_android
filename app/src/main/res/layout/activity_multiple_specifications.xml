<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">
    <include
        android:id="@+id/title_re_layout"
        layout="@layout/aty_shop_title" />
    <View
        android:id="@+id/line"
        android:layout_below="@id/title_re_layout"
        android:background="@color/line_color"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    <TextView
        android:id="@+id/saveTv"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:text="保存"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:textColor="#ffffffff"
        android:background="#fff23030"
        android:textSize="20sp"
        />
    <android.support.v4.widget.NestedScrollView
        android:layout_below="@id/line"
        android:layout_above="@id/saveTv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        android:overScrollMode="never"
        android:fillViewport="true">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <android.support.v7.widget.RecyclerView
                android:id="@+id/showRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                tools:listitem="@layout/item_specifications"
                tools:itemCount="2"/>
            <android.support.v7.widget.RecyclerView
                android:id="@+id/recyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:listitem="@layout/item_specifications"
                tools:itemCount="2"/>
            <TextView
                android:id="@+id/addTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+添加规格"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:layout_gravity="center_horizontal"
                android:textColor="#fff85708"
                android:textSize="17sp"/>
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</RelativeLayout>