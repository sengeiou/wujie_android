<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/bg_color"
    android:orientation="vertical"
    tools:context="com.txd.hzj.wjlp.minetoaty.order.EvaluationReleaseAty">

    <include layout="@layout/aty_title" />
    <View
        android:layout_width="match_parent"
        android:layout_height="8dp"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ListView
            android:id="@+id/for_goods_evaluste_lv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:divider="@color/bg_color"
            android:dividerHeight="8dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@color/white"
            android:orientation="horizontal"
            android:padding="8dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:padding="4dp"
                        android:text="卖家服务"
                        android:textColor="@color/app_text_color" />
                   <!-- <RatingBar
                        android:id="@+id/rb_1"
                        style="@style/foodRatingBar"
                        android:layout_width="wrap_content"
                        android:layout_height="14dp"
                        android:layout_marginRight="30dp"
                        android:isIndicator="false"
                        android:numStars="5"
                        android:rating="5.0"
                        android:stepSize="1" />-->

                    <com.txd.hzj.wjlp.view.RatingBar
                        android:id="@+id/rb_1"
                        style="@style/foodRatingBar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:clickable="true"
                        android:gravity="center"
                        android:numStars="5"
                        app:starFill="@mipmap/star_ful"
                        app:starHalf="@mipmap/unstar_ful"
                        app:starImageSize="15dp"
                        app:starStep="5"
                        android:layout_marginRight="40dp"
                        app:starcount="5"
                        app:starempty="@mipmap/unstar_ful"
                        app:starpadding="8dp"
                        app:stepSize="Full"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:padding="4dp"
                        android:text="物流服务"
                        android:textColor="@color/app_text_color" />

                    <!--<RatingBar
                        android:id="@+id/rb_2"
                        style="@style/foodRatingBar"
                        android:layout_width="wrap_content"
                        android:layout_height="14dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="30dp"
                        android:isIndicator="false"
                        android:numStars="5"
                        android:rating="5.0"
                        android:stepSize="1" />-->
                    <com.txd.hzj.wjlp.view.RatingBar
                        android:id="@+id/rb_2"
                        style="@style/foodRatingBar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:clickable="true"
                        android:gravity="center"
                        android:numStars="5"
                        app:starFill="@mipmap/star_ful"
                        app:starHalf="@mipmap/unstar_ful"
                        app:starImageSize="15dp"
                        app:starStep="5"
                        android:layout_marginRight="40dp"
                        app:starcount="5"
                        app:starempty="@mipmap/unstar_ful"
                        app:starpadding="8dp"
                        app:stepSize="Full"/>
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/tv_submit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="8dp"
                android:background="@drawable/shape_red_btn_01_li"
                android:text="评价服务"
                android:textColor="@color/colorAccent"
                android:textSize="14sp"
                android:visibility="visible" />
        </LinearLayout>

    </RelativeLayout>

