<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_down_angle_circle"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:background="@drawable/shape_upgrade_dialog_bg">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="30dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="发现新版本"
                android:textColor="@color/white"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/upgradeDialog_versionName_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textColor="@color/white"
                android:textSize="20sp"
                tools:text="2.0.9" />
        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="30dp"
            android:scaleType="fitXY"
            android:src="@mipmap/icon_upgrade_dialog_rocket" />
    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:text="更新内容"
        android:textColor="@color/black"
        android:textSize="17sp" />

    <TextView
        android:id="@+id/upgradeDialog_content_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:lineSpacingExtra="5dp"
        android:maxLines="5"
        android:minLines="3"
        android:textSize="17sp"
        tools:text="1、奥术大师大所大所多\n2、辣椒粉哗啦可就是地方啦地方了肯定会拉科技放大来看来看待发来看待回复\n3、按揭首付拉科技收到两份IAL肯定是发货啦快递费了" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:paddingBottom="10dp">


        <TextView
            android:id="@+id/upgradeDialog_close_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="@drawable/shape_upgrade_btn_cancel"
            android:gravity="center"
            android:padding="10dp"
            android:text="以后再说" />

        <TextView
            android:id="@+id/upgradeDialog_upgrade_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="@drawable/shape_upgrade_btn_now"
            android:gravity="center"
            android:padding="10dp"
            android:text="立即更新"
            android:textColor="@color/white" />

    </LinearLayout>

</LinearLayout>