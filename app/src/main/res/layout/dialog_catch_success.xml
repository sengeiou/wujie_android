<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="118dp"
            android:background="@color/white"
            android:orientation="vertical"
            android:paddingBottom="10dp"
            android:paddingTop="50dp">

            <ImageView
                android:id="@+id/dialogCatchSuccess_show_imgv"
                android:layout_width="wrap_content"
                android:layout_height="120dp"
                android:layout_gravity="center_horizontal"
                tools:src="@mipmap/ic_launcher" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_catch_success_down"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/dialogCatchSuccess_friendHelp_tv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:background="@drawable/shape_catch_success_friend_help"
                android:gravity="center"
                android:padding="8dp"
                android:text="好友助力"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/dialogCatchSuccess_oneTimeBtn_tv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:background="@drawable/shape_catch_success_onestime"
                android:gravity="center"
                android:padding="8dp"
                android:text="再来一次（10s）"
                android:textColor="@color/white" />

        </LinearLayout>

        <ImageView
            android:id="@+id/dialogCatchSuccess_close_imgv"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:src="@mipmap/icon_close_btn" />
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="190dp"
        android:scaleType="fitCenter"
        android:src="@mipmap/icon_catch_success" />
</RelativeLayout>
