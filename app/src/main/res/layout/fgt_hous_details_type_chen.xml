<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:background="@color/white"
    >

    <com.github.nuptboyzhb.lib.SuperSwipeRefreshLayout
        android:id="@+id/house_ss_re_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_details_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />
    </com.github.nuptboyzhb.lib.SuperSwipeRefreshLayout>

    <include
        layout="@layout/aty_no_data_layout"
        android:visibility="gone"/>

    <ImageView
        android:id="@+id/hx_be_back_top_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="16dp"
        android:src="@drawable/icon_be_back_top"
        android:visibility="gone"/>
</FrameLayout>
