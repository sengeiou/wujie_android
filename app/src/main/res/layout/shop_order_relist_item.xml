<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
<Space
    android:layout_width="match_parent"
    android:layout_height="10dp"
    android:background="#DDDDDD"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/icon_mine_collection"
            android:drawablePadding="10dp"
            android:padding="13dp"
            android:text="水晶家纺"
            android:textColor="@color/black"
            android:textSize="15sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:padding="13dp"
            android:text="已完成"
            android:textColor="@color/red_tv_back"
            android:textSize="15sp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/shop_order_ima"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_marginBottom="9dp"
            android:layout_marginStart="14dp"
            android:layout_marginTop="9dp"
            android:background="@color/red_tv_back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="9dp"
            android:layout_toRightOf="@+id/shop_order_ima"
            android:ellipsize="end"
            android:lines="2"
            android:text="康尔馨五星级酒店毛巾纯棉加大加
厚面巾洗脸全棉吸水男女成人..."
            android:textSize="12sp" />

        <TextView
            android:id="@+id/shop_order_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="14dp"
            android:layout_marginTop="12dp"
            android:text="￥99.00"
            android:textColor="@color/black"
            android:textSize="12sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/shop_order_money"
            android:layout_marginEnd="14dp"
            android:layout_marginTop="9dp"
            android:text="X1"
            android:textColor="@color/shop_text_color"
            android:textSize="12sp" />
    </RelativeLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#DDDDDD" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="11dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingStart="13dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="买家：你的长安城"
                android:textColor="@color/black"
                android:textSize="13sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="供货商：123456"
                android:textColor="@color/black"
                android:textSize="13sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="收益：156.00积分"
                android:textColor="@color/black"
                android:textSize="13sp" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:src="@drawable/icon_mine_collection" />

            <TextView
                android:id="@+id/shop_order_voucher_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="用卷类型：红券"
                android:textColor="@color/black"
                android:textSize="13sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/shop_order_voucher_type"
                android:layout_marginTop="8dp"
                android:text="用卷比例：50%"
                android:textColor="@color/black"
                android:textSize="13sp" />
        </RelativeLayout>
    </LinearLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@drawable/shop_dotted_line" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:paddingBottom="6dp"
            android:paddingEnd="14dp"
            android:paddingTop="6dp"
            android:text="2018-05-29  11:37:35"
            android:textColor="@color/shop_text_color" />
    </RelativeLayout>
</LinearLayout>