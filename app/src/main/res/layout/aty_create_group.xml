<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color"
    android:orientation="vertical"
    tools:context="com.txd.hzj.wjlp.mellOnLine.gridClassify.CreateGroupAty">

    <include layout="@layout/aty_title" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="1dp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical"
               >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/group_goods_pic_iv"
                        android:layout_width="100dp"
                        android:layout_height="100dp" />

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginStart="8dp">

                        <TextView
                            android:id="@+id/group_goods_name_tv"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/group_other_info_tv"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" />

                            <TextView
                                android:id="@+id/group_goods_price_tv"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textColor="#E02F25"
                                android:textSize="18sp" />
                        </LinearLayout>
                    </FrameLayout>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="8dp"
                    android:background="@color/bg_color"/>
                <LinearLayout
                    android:id="@+id/create_group_ll"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="等待拼单，仅剩"
                            android:textColor="@color/black"
                            android:textSize="20sp"
                            android:gravity="center"
                            android:textStyle="bold"/>
                        <TextView
                            android:id="@+id/text_nums"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="1"
                            android:textColor="@color/colorRed"
                            android:textSize="20sp"
                            android:gravity="center"
                            android:textStyle="bold"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="个名额"
                            android:textColor="@color/black"
                            android:textSize="20sp"
                            android:gravity="center"
                            android:textStyle="bold"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="剩余"
                            android:textSize="15sp"
                            android:textColor="@color/black"/>
                       <!--daojishi kongjian
                      -->
                        <cn.iwgang.countdownview.CountdownView
                            android:id="@+id/times_id"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:isHideTimeBackground="false"
                            app:timeBgRadius="5dp"
                            app:isShowHour="true"
                            app:isShowMinute="true"
                            app:isShowSecond="true"
                            app:timeTextColor="#FFFFFF"
                            app:timeBgColor ="#000000"
                            app:timeTextSize="15sp"
                            app:isShowMillisecond="true"
                            app:isTimeTextBold="false"
                            app:suffixLRMargin="3dp"
                            app:suffixGravity="center"
                            app:suffixTextColor="#000000"
                            app:isSuffixTextBold="true"
                            app:suffixTextSize="15sp"
                            app:suffixHour=":"
                            app:suffixMinute=":"
                            app:suffixMillisecond=":"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="结束"
                            android:textColor="@color/black"
                            android:textSize="15sp"
                            />
                    </LinearLayout>
                </LinearLayout>
                <TextView
                    android:id="@+id/group_status_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="8dp"
                    android:text="团已满"
                    android:textColor="@color/app_text_color"
                    android:textSize="16sp"
                    android:visibility="gone" />

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/group_member_rv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="24dp" />

                <TextView
                    android:id="@+id/group_operation_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:background="@drawable/shape_good_luck_tv"
                    android:gravity="center"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:padding="12dp"
                    android:textColor="@color/white"
                    android:textSize="16sp" />
            </LinearLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="8dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical"
                android:padding="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="拼团须知" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="8dp"
                        android:src="@drawable/icon_close"
                        android:visibility="gone" />
                </LinearLayout>

                <TextView
                    android:id="@+id/textview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:text="·邀请好友参团" />

            </LinearLayout>
        </LinearLayout>

    </ScrollView>

</LinearLayout>
