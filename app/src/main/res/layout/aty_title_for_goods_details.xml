<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/goods_details_title"
    android:layout_width="match_parent"
    android:layout_height="48dp"
    android:background="@color/white">

    <ImageView
        android:id="@+id/title_be_back_iv"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:onClick="beBack"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:src="@drawable/icon_be_back_b" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:gravity="center_vertical|bottom"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/title_goods_layout"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="bottom"
            android:layout_weight="1"
            android:gravity="bottom"
            android:orientation="vertical"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:paddingTop="8dp">

            <TextView
                android:id="@+id/title_goods_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="商品"
                android:textColor="@color/theme_color"
                android:textSize="16sp" />

            <View
                android:id="@+id/title_goods_view"
                android:layout_width="40dp"
                android:layout_height="2dp"
                android:layout_marginTop="12dp"
                android:background="@color/theme_color" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/title_evaluate_layout"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="bottom"
            android:layout_weight="1"
            android:gravity="bottom"
            android:orientation="vertical"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:paddingTop="8dp">

            <TextView
                android:id="@+id/title_evaluate_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="评价"
                android:textColor="@color/app_text_color"
                android:textSize="16sp" />

            <View
                android:id="@+id/title_evaluate_view"
                android:layout_width="40dp"
                android:layout_height="2dp"
                android:layout_marginTop="12dp"
                android:background="@color/white" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/title_details_layout"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="bottom"
            android:layout_weight="1"
            android:gravity="bottom"
            android:orientation="vertical"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:paddingTop="8dp">

            <TextView
                android:id="@+id/title_details_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="素材"
                android:textColor="@color/app_text_color"
                android:textSize="16sp" />

            <View
                android:id="@+id/title_details_view"
                android:layout_width="40dp"
                android:layout_height="2dp"
                android:layout_marginTop="12dp"
                android:background="@color/white" />

        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="8dp"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/goods_title_collect_layout"
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingBottom="4dp"
            android:paddingLeft="6dp"
            android:paddingRight="6dp"
            >
            <!--<ImageView
                android:id="@+id/goods_title_collect_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_collect" />
-->
            <TextView
                android:id="@+id/goods_title_collect_tv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingTop="4dp"
                android:drawablePadding="4dp"
                android:gravity="center"
                android:drawableTop="@drawable/icon_collect"
                android:text="收藏"
                android:textSize="12sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/goods_title_share_tv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:drawablePadding="4dp"
            android:drawableTop="@drawable/icon_goods_title_share"
            android:padding="4dp"
            android:text="分享"
            android:textSize="12sp" />

    </LinearLayout>

</RelativeLayout>