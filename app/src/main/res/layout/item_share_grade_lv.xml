<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/bg_color"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingBottom="12dp"
    android:paddingEnd="32dp"
    android:paddingStart="32dp"
    android:paddingTop="12dp">


    <FrameLayout
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:padding="8dp"
        >

        <cn.gavinliu.android.lib.shapedimageview.ShapedImageView
            android:id="@+id/rank_item_haed_iv"
            android:layout_width="60dp"
            android:layout_height="60dp"
            app:shape_mode="circle"/>

        <ImageView
            android:id="@+id/top_three_iv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:src="@drawable/icon_ranking_0"
            android:visibility="gone"/>

        <ImageView
            android:id="@+id/top_from_four_to_five_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|start"
            android:src="@drawable/icon_ranking_4"/>
    </FrameLayout>

    <TextView
        android:id="@+id/rank_nickname_Tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:text="夏日伊咪"
        android:textColor="@color/app_text_color"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="推荐"/>

        <TextView
            android:id="@+id/rank_num_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="6dp"
            android:text="1234567"
            android:textColor="@color/colorAccent"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="人"/>

    </LinearLayout>

</LinearLayout>