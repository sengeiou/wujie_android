<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:scrollbars="none">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#F6F6F6"
            android:padding="10dp"
            android:text="身份信息"
            android:textColor="#999999"
            android:textSize="14sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="商家名称"
                android:textColor="#656565"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/mechant_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:hint="请输入商家名称"
                android:maxLines="1"
                android:padding="10dp"
                android:textColor="#656565"
                android:textColorHint="#9A9A9A"
                android:textSize="14sp" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="10dp"
            android:background="#F6F6F6" />

        <LinearLayout
            android:id="@+id/layout_logo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="门头"
                android:textColor="#656565"
                android:textSize="14sp" />

            <ImageView
                android:id="@+id/im_logo"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:scaleType="fitXY"
                android:visibility="gone" />

            <TextView
                android:id="@+id/hint_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="请上传店铺门头照片"
                android:paddingStart="10dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableRight="@drawable/icon_turn_right_g"
                android:padding="10dp" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="10dp"
            android:background="#F6F6F6" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="经营类目"
                android:textColor="#656565"
                android:textSize="14sp" />


            <TextView
                android:id="@+id/tv_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableRight="@drawable/icon_turn_right_g"
                android:hint="请选择类别"
                android:maxLines="1"
                android:padding="10dp"
                android:textColor="#656565"
                android:textColorHint="#9A9A9A"
                android:textSize="14sp" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="10dp"
            android:background="#F6F6F6" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="联系人"
                android:textColor="#656565"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/user_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:hint="请输入联系人"
                android:maxLines="1"
                android:padding="10dp"
                android:textColor="#656565"
                android:textColorHint="#9A9A9A"
                android:textSize="14sp" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="10dp"
            android:background="#F6F6F6" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="职位"
                android:textColor="#656565"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/user_position"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:hint="请输入联系人职位"
                android:maxLines="1"
                android:padding="10dp"
                android:textColor="#656565"
                android:textColorHint="#9A9A9A"
                android:textSize="14sp" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="10dp"
            android:background="#F6F6F6" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="联系电话"
                android:textColor="#656565"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/user_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:hint="请输入联系电话"
                android:inputType="number"
                android:maxLines="1"
                android:padding="10dp"
                android:textColor="#656565"
                android:textColorHint="#9A9A9A"
                android:textSize="14sp" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="10dp"
            android:background="#F6F6F6" />

        <LinearLayout
            android:id="@+id/layout_city"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="所在地区"
                android:textColor="#656565"
                android:textSize="14sp" />


            <TextView
                android:id="@+id/tv_city"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableRight="@drawable/icon_turn_right_g"
                android:hint="请选择所在地区"
                android:maxLines="1"
                android:padding="10dp"
                android:textColor="#656565"
                android:textColorHint="#9A9A9A"
                android:textSize="14sp" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="10dp"
            android:background="#F6F6F6" />

        <LinearLayout
            android:id="@+id/layout_street"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="所在街道"
                android:textColor="#656565"
                android:textSize="14sp" />


            <TextView
                android:id="@+id/tv_street"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableRight="@drawable/icon_turn_right_g"
                android:hint="请选择所在街道"
                android:maxLines="1"
                android:padding="10dp"
                android:textColor="#656565"
                android:textColorHint="#9A9A9A"
                android:textSize="14sp" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="10dp"
            android:background="#F6F6F6" />

        <TextView
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="情况描述"
            android:textColor="#656565"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:gravity="start"
            android:hint="请填写申请店铺的情况"
            android:lines="4"
            android:padding="10dp"
            android:textColor="#656565"
            android:textColorHint="#9A9A9A"
            android:textSize="14sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#F6F6F6"
            android:padding="10dp"
            android:text="上传相关资质"
            android:textColor="#ABABAB"
            android:textSize="14sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:gravity="center"
            android:text="对焦使照片上面字体和照片清晰可见"
            android:textColor="#0B0B0B"
            android:textSize="14sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <ImageView
                android:id="@+id/im1"
                android:layout_width="125dp"
                android:layout_height="125dp"
                android:layout_weight="1"
                android:scaleType="fitXY"
                android:src="@mipmap/icon_yyzz" />


            <ImageView
                android:id="@+id/image1"
                android:layout_width="125dp"
                android:layout_height="125dp"
                android:layout_weight="1"
                android:scaleType="fitXY"
                android:src="@mipmap/icon_yyzz1" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">


            <ImageView
                android:id="@+id/im2"
                android:layout_width="125dp"
                android:layout_height="125dp"
                android:layout_weight="1"
                android:scaleType="fitXY"
                android:src="@mipmap/icon_idcard_bg" />

            <ImageView
                android:id="@+id/image2"
                android:layout_width="125dp"
                android:layout_height="125dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="10dp"
                android:scaleType="fitXY"
                android:src="@mipmap/icon_idcard_front" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/im3"
                android:layout_width="125dp"
                android:layout_height="125dp"
                android:scaleType="fitXY"
                android:src="@mipmap/icon_idcard_bg_1" />


            <ImageView
                android:id="@+id/image3"
                android:layout_width="125dp"
                android:layout_height="125dp"
                android:layout_weight="1"
                android:scaleType="fitXY"
                android:src="@mipmap/icon_idcard_back" />
        </LinearLayout>

        <TextView
            android:id="@+id/textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:text="提示:认证企业资质后，此账号个人信息认证不做唯一性认证限制"
            android:textColor="#F45A58"
            android:textSize="14sp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_submit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="#F23030"
            android:gravity="center"
            android:padding="10dp"
            android:text="确定提交"
            android:textColor="@android:color/white"
            android:textSize="14sp" />
    </LinearLayout>
</ScrollView>