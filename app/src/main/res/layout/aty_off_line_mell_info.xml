<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color"
    android:orientation="vertical"
    tools:context="com.txd.hzj.wjlp.mellOffLine.OffLineDetailsAty">

    <FrameLayout
        android:id="@+id/mell_info_title_layout"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/white">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:onClick="beBack"
            android:padding="8dp"
            android:src="@drawable/icon_be_back_b" />

        <TextView
            android:id="@+id/center_tv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:text=""
            android:textColor="@color/app_text_color"
            android:textSize="20sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_gravity="end"
            android:background="@color/white"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/off_line_mell_collect_layout"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="8dp">

                <ImageView
                    android:id="@+id/goods_title_collect_iv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:src="@drawable/icon_collect_g_hzj" />

                <TextView
                    android:id="@+id/goods_title_collect_tv"
                    android:layout_width="40dp"
                    android:layout_height="match_parent"
                    android:drawableTop="@drawable/icon_collect_g_hzj"
                    android:gravity="center"
                    android:drawablePadding="6dp"
                    android:text="收藏"
                    android:textColor="@color/app_text_color"
                    android:textSize="12sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/off_line_mell_share_tv"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:drawablePadding="6dp"
                android:drawableTop="@drawable/icon_goods_title_share"
                android:gravity="center"
                android:padding="8dp"
                android:text="分享"
                android:textColor="@color/app_text_color"
                android:textSize="12sp" />
        </LinearLayout>
    </FrameLayout>

    <ScrollView
        android:id="@+id/nsv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:id="@+id/mell_info_head_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/other_info_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#83CA9D"
                android:orientation="vertical"
                android:padding="12dp">

                <!--店铺评价-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center">

                    <View
                        android:layout_width="80dp"
                        android:layout_height="1dp"
                        android:background="@color/white" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="8dp"
                        android:text="店铺评价"
                        android:textColor="@color/white" />

                    <View
                        android:layout_width="80dp"
                        android:layout_height="1dp"
                        android:background="@color/white" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/shape_off_line_lin_layout"
                    android:orientation="vertical"
                    android:padding="12dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/score_tv"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:padding="8dp"
                                android:textColor="@color/white"
                                android:textSize="24sp" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:padding="8dp"
                                android:text="综合评分"
                                android:textColor="@color/white" />
                        </LinearLayout>

                        <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:background="@color/white" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/total_tv"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:padding="8dp"
                                android:textColor="@color/white"
                                android:textSize="24sp" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:padding="8dp"
                                android:text="评论条数"
                                android:textColor="@color/white" />
                        </LinearLayout>

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginBottom="8dp"
                        android:layout_marginTop="8dp"
                        android:background="@color/white" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center">

                        <cn.gavinliu.android.lib.shapedimageview.ShapedImageView
                            android:id="@+id/use_head_iv"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            app:shape_mode="circle" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:paddingBottom="12dp"
                            android:paddingTop="12dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <TextView
                                    android:id="@+id/nick_name_tv"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:textColor="@color/white" />

                                <TextView
                                    android:id="@+id/create_time_tv"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/white" />
                            </LinearLayout>

                            <RatingBar
                                android:id="@+id/mell_score_rating_bar"
                                style="@style/foodRatingBar"
                                android:layout_width="wrap_content"
                                android:layout_height="22dp"
                                android:layout_gravity="center_vertical"
                                android:layout_marginTop="12dp"
                                android:isIndicator="true"
                                android:numStars="5"
                                android:rating="0" />

                        </LinearLayout>
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginBottom="8dp"
                        android:layout_marginTop="8dp"
                        android:background="@color/white" />

                    <TextView
                        android:id="@+id/check_all_comment_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:drawableEnd="@drawable/icon_turn_right"
                        android:drawablePadding="8dp"
                        android:padding="8dp"
                        android:text="查看用户的全部评价"
                        android:textColor="@color/white" />

                </LinearLayout>
                <!--店铺信息-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center">

                    <View
                        android:layout_width="80dp"
                        android:layout_height="1dp"
                        android:background="@color/white" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="8dp"
                        android:text="店铺信息"
                        android:textColor="@color/white" />

                    <View
                        android:layout_width="80dp"
                        android:layout_height="1dp"
                        android:background="@color/white" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/shape_off_line_lin_layout"
                    android:orientation="vertical"
                    android:padding="12dp">

                    <TextView
                        android:id="@+id/other_info_tv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:lineSpacingExtra="6dp"
                        android:textColor="@color/white" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginBottom="8dp"
                        android:layout_marginTop="8dp"
                        android:background="@color/white" />

                    <TextView
                        android:id="@+id/mell_aptitude_tv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableEnd="@drawable/icon_turn_right"
                        android:drawablePadding="8dp"
                        android:gravity="end"
                        android:paddingBottom="12dp"
                        android:paddingTop="12dp"
                        android:text="查看商家资质"
                        android:textColor="@color/white" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginBottom="8dp"
                        android:layout_marginTop="8dp"
                        android:background="@color/white" />

                    <TextView
                        android:id="@+id/mell_reported_tv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableEnd="@drawable/icon_turn_right"
                        android:gravity="end"
                        android:paddingBottom="12dp"
                        android:paddingTop="12dp"
                        android:text="举报商家得红包"
                        android:textColor="@color/white" />

                </LinearLayout>

            </LinearLayout>
        </LinearLayout>

    </ScrollView>

</LinearLayout>
