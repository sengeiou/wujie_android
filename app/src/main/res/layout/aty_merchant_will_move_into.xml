<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color"
    android:orientation="vertical"
    tools:context="com.txd.hzj.wjlp.minetoAty.mellInto.MerchantWillMoveIntoAty">

    <include layout="@layout/aty_title" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/update_mell_info_tv">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="12dp"
                    android:text="身份信息" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:divider="@drawable/lin_layout_vertical_line_shape"
                    android:orientation="vertical"
                    android:padding="12dp"
                    android:showDividers="middle">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingBottom="12dp"
                            android:paddingEnd="8dp"
                            android:paddingTop="8dp"
                            android:text="商户名称"
                            android:textColor="@color/app_text_color" />

                        <EditText
                            android:id="@+id/refer_mell_name_tv"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/white"
                            android:hint="请填写您的商户名称"
                            android:paddingBottom="8dp"
                            android:paddingStart="12dp"
                            android:paddingTop="8dp"
                            android:textSize="14sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/manage_scope_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingBottom="12dp"
                            android:paddingEnd="8dp"
                            android:paddingTop="8dp"
                            android:text="经营范围"
                            android:textColor="@color/app_text_color" />

                        <TextView
                            android:id="@+id/manage_scope_tv"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/white"
                            android:drawableEnd="@drawable/icon_turn_right_g"
                            android:ellipsize="end"
                            android:hint="请选择您的经营范围"
                            android:maxLines="1"
                            android:paddingBottom="8dp"
                            android:paddingStart="12dp"
                            android:paddingTop="8dp"
                            android:textSize="14sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingBottom="12dp"
                            android:paddingEnd="8dp"
                            android:paddingTop="8dp"
                            android:text="联系人    "
                            android:textColor="@color/app_text_color" />

                        <EditText
                            android:id="@+id/refer_link_man_tv"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/white"
                            android:hint="请填写商家联系人"
                            android:paddingBottom="8dp"
                            android:paddingStart="12dp"
                            android:paddingTop="8dp"
                            android:textSize="14sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingBottom="12dp"
                            android:paddingEnd="8dp"
                            android:paddingTop="8dp"
                            android:text="职位        "
                            android:textColor="@color/app_text_color" />

                        <EditText
                            android:id="@+id/refer_job_tv"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/white"
                            android:hint="请填写您的职位"
                            android:paddingBottom="8dp"
                            android:paddingStart="12dp"
                            android:paddingTop="8dp"
                            android:textSize="14sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingBottom="12dp"
                            android:paddingEnd="8dp"
                            android:paddingTop="8dp"
                            android:text="联系电话"
                            android:textColor="@color/app_text_color" />

                        <EditText
                            android:id="@+id/refer_link_phone_tv"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/white"
                            android:hint="请填写您的手机号码"
                            android:inputType="phone"
                            android:paddingBottom="8dp"
                            android:paddingStart="12dp"
                            android:paddingTop="8dp"
                            android:textSize="14sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingBottom="12dp"
                            android:paddingEnd="8dp"
                            android:paddingTop="8dp"
                            android:text="天猫网店"
                            android:textColor="@color/app_text_color" />

                        <EditText
                            android:id="@+id/refer_tmall_url_ev"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/white"
                            android:hint="请填写您的网店网址"
                            android:inputType="textUri"
                            android:paddingBottom="8dp"
                            android:paddingStart="12dp"
                            android:paddingTop="8dp"
                            android:textSize="14sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingBottom="12dp"
                            android:paddingEnd="8dp"
                            android:paddingTop="8dp"
                            android:text="京东网店"
                            android:textColor="@color/app_text_color" />

                        <EditText
                            android:id="@+id/refer_jd_mell_ev"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/white"
                            android:hint="请填写您的网店网址"
                            android:inputType="textUri"
                            android:paddingBottom="8dp"
                            android:paddingStart="12dp"
                            android:paddingTop="8dp"
                            android:textSize="14sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingBottom="12dp"
                            android:paddingEnd="8dp"
                            android:paddingTop="8dp"
                            android:text="其他网店"
                            android:textColor="@color/app_text_color" />

                        <EditText
                            android:id="@+id/refer_other_url_tv"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/white"
                            android:hint="请填写您的网店网址"
                            android:inputType="textUri"
                            android:paddingBottom="8dp"
                            android:paddingStart="12dp"
                            android:paddingTop="8dp"
                            android:textSize="14sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingBottom="12dp"
                            android:paddingEnd="8dp"
                            android:paddingTop="8dp"
                            android:text="产品描述"
                            android:textColor="@color/app_text_color" />

                        <EditText
                            android:id="@+id/refer_goods_desc_tv"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/white"
                            android:gravity="top|start"
                            android:hint="请填写计划销售产品描述"
                            android:lines="7"
                            android:textSize="14sp" />

                    </LinearLayout>

                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="12dp"
                    android:text="上传产品照片" />

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/goods_pic_rv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:padding="12dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="12dp"
                    android:text="上传营业执照照片" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:padding="12dp">

                    <ImageView
                        android:id="@+id/bottom_right_iv"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:src="@drawable/icon_updata_pic_hzj" />

                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="12dp"
                    android:text="上传其他证件照片" />

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/identification_photo_rv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:padding="12dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:orientation="vertical"
                    android:padding="12dp"
                    android:visibility="gone">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/top_left_iv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/icon_top_left" />

                        <Space
                            android:layout_width="12dp"
                            android:layout_height="match_parent" />

                        <ImageView
                            android:id="@+id/top_right_iv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/icon_top_right" />
                    </LinearLayout>

                    <Space
                        android:layout_width="match_parent"
                        android:layout_height="12dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/bottom_left_iv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/icon_bottom_left" />

                        <Space
                            android:layout_width="12dp"
                            android:layout_height="match_parent" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/icon_bottom_right" />
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </ScrollView>

        <TextView
            android:id="@+id/update_mell_info_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="12dp"
            android:layout_marginEnd="24dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/shape_to_login_tv_shape"
            android:gravity="center"
            android:padding="12dp"
            android:text="推荐"
            android:textColor="@color/white" />

    </RelativeLayout>

</LinearLayout>
