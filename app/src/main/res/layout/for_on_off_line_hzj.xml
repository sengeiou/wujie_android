<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:divider="@drawable/lin_layout_horizontal_line_shape"
    android:orientation="horizontal"
    android:visibility="gone"
    android:showDividers="middle">

    <ImageView
        android:id="@+id/three_image_left_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:scaleType="centerCrop"
        tools:src="@drawable/icon_brand"/>

    <ImageView
        android:id="@+id/three_image_center_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:scaleType="centerCrop"
        tools:src="@drawable/icon_mode_in_china"/>

    <ImageView
        android:id="@+id/three_image_right_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:scaleType="centerCrop"
        tools:src="@drawable/icon_science"/>
</LinearLayout>