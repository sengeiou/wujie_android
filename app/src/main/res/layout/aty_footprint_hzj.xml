<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.txd.hzj.wjlp.minetoAty.FootprintAty">

    <RelativeLayout
        android:id="@+id/foot_print_title_layout"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/white">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:onClick="beBack"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:src="@drawable/icon_be_back_b"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/title_left_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/foot_print_goods_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"
                    android:text="商品"
                    android:textColor="@color/colorAccent"
                    android:textSize="18sp"/>

                <View
                    android:id="@+id/foot_print_goods_view"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/colorAccent"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/title_right_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/foot_print_mell_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"
                    android:text="商家"
                    android:textColor="@color/gray_text_color"
                    android:textSize="18sp"/>

                <View
                    android:id="@+id/foot_print_mell_view"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/white"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/title_right_right_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/foot_print_books_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"
                    android:text="书院"
                    android:textColor="@color/gray_text_color"
                    android:textSize="18sp"/>

                <View
                    android:id="@+id/foot_print_books_view"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/white"/>
            </LinearLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/foot_right_tv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:gravity="center"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:text="编辑"
            android:visibility="gone"
            android:textColor="@color/app_text_color"
            android:textSize="16sp"/>

    </RelativeLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/foot_print_layout"/>

</LinearLayout>
