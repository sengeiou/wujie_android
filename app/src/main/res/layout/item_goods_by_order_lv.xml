<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/bg_color"
    android:orientation="vertical">

    <include layout="@layout/aty_order_goods_info_hzj" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:visibility="gone">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:padding="12dp"
            android:text="购买数量"
            android:textColor="@color/app_text_color" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/goods_num_reduce"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/icon_cart_goods_num_reduce" />

            <TextView
                android:id="@+id/operation_goods_num_tv"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="1"
                android:textColor="@color/app_text_color" />


            <ImageView
                android:id="@+id/goods_num_increase_tv"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/icon_cart_goods_num_increase" />

        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/layout_sle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_sle_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableLeft="@drawable/icon_express_left"
            android:drawablePadding="10dp"
            android:gravity="center_vertical"
            android:padding="10dp"
            android:text="请选择配送方式"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_sle_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="10dp"
            android:gravity="center_vertical"
            android:padding="10dp"
            android:textSize="14sp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:src="@mipmap/icon_more" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal"
        android:padding="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:maxLines="1"
            android:padding="8dp"
            android:text="发票"
            android:textColor="@color/app_text_color"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="10dp"
            android:drawableRight="@mipmap/icon_more"
            android:maxLines="1"
            android:padding="8dp"
            android:text="无"
            android:textColor="@color/app_text_color"
            android:textSize="14sp" />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/layout_shouhou"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal"
        android:padding="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:maxLines="1"
            android:padding="8dp"
            android:text="售后服务类型"
            android:textColor="@color/app_text_color"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_shouhou"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="10dp"
            android:maxLines="1"
            android:padding="8dp"
            android:text="(免费换货，免费维修)7天"
            android:textColor="@color/app_text_color"
            android:textSize="14sp" />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/layout_gongyi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal"
        android:padding="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:maxLines="1"
            android:padding="8dp"
            android:text="公益宝贝"
            android:textColor="@color/app_text_color"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_gongyi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="10dp"
            android:maxLines="1"
            android:padding="8dp"
            android:text="成交后卖家将捐赠0.02元"
            android:textColor="@color/app_text_color"
            android:textSize="14sp" />

    </LinearLayout>

</LinearLayout>