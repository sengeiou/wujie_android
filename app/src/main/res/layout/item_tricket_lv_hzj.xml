<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ticket_lin_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/icon_un_valid_ticket_bg_hzj"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/img_cover"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:scaleType="centerCrop" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tricket_nowMoney_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="¥1231324"
            android:textColor="@color/colorAccent"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tricket_userticketId_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="编码"
            android:textColor="@color/gray_text_color"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tricket_money_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="面值"
            android:textColor="@color/gray_text_color"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/end_sourceStatus_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="途径"
            android:textColor="@color/gray_text_color"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/end_time_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="失效日期：2018.0606"
            android:textColor="@color/gray_text_color"
            android:textSize="12sp" />

    </LinearLayout>

</LinearLayout>