<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.txd.hzj.wjlp.minetoaty.collect.CollectHzjAty">

    <RelativeLayout
        android:id="@+id/collect_title_layout"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/white">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:onClick="beBack"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:src="@drawable/icon_be_back_b"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:background="@color/white"
            android:gravity="center">

            <LinearLayout
                android:id="@+id/collect_left_layout"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/left_goods_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:padding="8dp"
                    android:text="商品"
                    android:textSize="18sp"/>

                <View
                    android:id="@+id/left_goods_view"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/white"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/collect_middle_layout"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/middle_mell_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:padding="8dp"
                    android:text="商家"
                    android:textSize="18sp"/>

                <View
                    android:id="@+id/middle_mell_view"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/white"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/collect_right_layout"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/right_books_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:padding="8dp"
                    android:text="书院"
                    android:textSize="18sp"/>

                <View
                    android:id="@+id/right_books_view"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/white"/>

            </LinearLayout>
            <LinearLayout
                android:id="@+id/collect_offLine_layout"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/right_offLine_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:padding="8dp"
                    android:text="线下店铺"
                    android:textSize="18sp"/>

                <View
                    android:id="@+id/right_offLine_view"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/white"/>

            </LinearLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/foot_right_tv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:gravity="center"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:text="编辑"
            android:textColor="@color/app_text_color"
            android:textSize="16sp"/>

    </RelativeLayout>


    <FrameLayout
        android:id="@+id/collect_frame_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>
