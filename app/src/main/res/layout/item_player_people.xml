<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:foreground="?attr/selectableItemBackground"
    app:cardCornerRadius="5dp"
    app:cardElevation="4dp"
    app:cardPreventCornerOverlap="true"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_money_item"
        android:padding="8dp">

        <ImageView
            android:id="@+id/itemPlayerProple_header_imgv"
            android:layout_width="46dp"
            android:layout_height="46dp"
            android:layout_margin="5dp"
            tools:src="@mipmap/ic_launcher_round" />

        <TextView
            android:id="@+id/itemPlayerProple_name_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:textColor="#333333"
            android:textSize="12sp"
            tools:text="小包子一枚" />

        <TextView
            android:id="@+id/itemPlayerProple_time_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:textColor="#C3C3C3"
            android:textSize="12sp"
            tools:text="2018-09-11 21:33" />

        <ImageView
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="5dp"
            android:src="@mipmap/icon_video" />
    </LinearLayout>
</android.support.v7.widget.CardView>
