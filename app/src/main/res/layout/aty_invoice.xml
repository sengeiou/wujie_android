<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color"
    android:orientation="vertical">

    <include layout="@layout/aty_title" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="8dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:padding="10dp"
        android:text="选择发票"
        android:textColor="@android:color/black"
        android:textSize="14sp" />

    <RadioGroup
        android:id="@+id/app_main_rg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/home_pager_rb"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/selector_tab_text_color"
            android:button="@null"
            android:layout_weight="1"
            android:checked="true"
            android:drawableLeft="@drawable/selector_invoice"
            android:padding="20dp"
            android:text="不要发票"
            android:textColor="@drawable/selector_tab_text_color" />

        <RadioButton
            android:id="@+id/mell_offline_rb"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:background="@drawable/selector_tab_text_color"
            android:button="@null"
            android:drawableLeft="@drawable/selector_invoice"
            android:padding="20dp"
            android:text="增值税专用发票" />
    </RadioGroup>
</LinearLayout>