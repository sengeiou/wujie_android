<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <View
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="20dp"/>
    <RelativeLayout
        android:id="@+id/title_layout"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/white"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/title_be_back_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="beBack"
            android:layout_centerVertical="true"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:src="@drawable/icon_be_back_b" />

        <LinearLayout
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/myMemberTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="我的会员"
                android:gravity="center"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:paddingTop="7dp"
                android:clickable="true"
                android:paddingBottom="7dp"
                android:background="@drawable/shape_red_title_left_select"
                android:textColor="#ffffffff"
                android:textSize="14sp"
                />
            <TextView
                android:id="@+id/changeMemberTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="换入会员"
                android:gravity="center"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:paddingTop="7dp"
                android:paddingBottom="7dp"
                android:background="@drawable/shape_red_title_middle_select"
                android:textColor="#ffffffff"
                android:textSize="14sp"
                />
            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/changeMsgTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="互换消息"
                    android:gravity="center"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp"
                    android:paddingTop="7dp"
                    android:paddingBottom="7dp"
                    android:background="@drawable/shape_red_title_right_select"
                    android:textColor="#ffffffff"
                    android:textSize="14sp"
                    />
                <TextView
                    android:id="@+id/pointTv"
                    android:visibility="gone"
                    android:layout_gravity="end|top"
                    android:background="@drawable/shape_oval_red"
                    android:layout_width="15dp"
                    android:layout_height="15dp" />
            </FrameLayout>

        </LinearLayout>
    </RelativeLayout>
    <View
        android:background="@color/line_color"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    <FrameLayout
        android:id="@+id/contentLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>