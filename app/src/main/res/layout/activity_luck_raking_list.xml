<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/bg_color"
    android:orientation="vertical">

    <include layout="@layout/aty_title" />


    <RelativeLayout
        android:id="@+id/personalLayout"
        android:layout_width="match_parent"
        android:paddingTop="5dp"
        android:visibility="gone"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="10dp"
        android:paddingBottom="5dp"
        android:background="@drawable/shape_white_radius5"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/numTv"
            android:layout_marginStart="5dp"
            android:layout_centerVertical="true"
            android:background="@drawable/icon_one"
            android:layout_width="16dp"
            android:gravity="center"
            android:layout_height="wrap_content" />

        <cn.gavinliu.android.lib.shapedimageview.ShapedImageView
            android:id="@+id/headImg"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginStart="15dp"
            android:layout_toRightOf="@id/numTv"
            app:shape_mode="circle"
            android:layout_centerVertical="true"
            app:stroke_color="@color/white"
            app:stroke_width="2dp" />
        <TextView
            android:id="@+id/nameTv"
            android:text="张三"
            android:layout_marginStart="15dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/headImg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/priceTv"
            android:text="100"
            android:textColor="@color/red_tv_back"
            android:layout_marginStart="15dp"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <ListView
        android:id="@+id/rakingList"
        android:layout_marginTop="10dp"
        android:background="@drawable/shape_white_radius5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:dividerHeight="1dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        />
</LinearLayout>