<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color"
    android:divider="@drawable/lin_layout_vertical_line_shape"
    android:orientation="vertical"
    android:showDividers="middle"
    tools:context="com.txd.hzj.wjlp.minetoaty.balance.TransferAccountsAty">

    <include layout="@layout/aty_title" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:text="可用余额    "
            android:textColor="@color/app_text_color" />

        <TextView
            android:id="@+id/can_use_money_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:text="5000"
            android:textColor="@color/colorAccent" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:text="收款方        "
            android:textColor="@color/app_text_color" />

        <EditText
            android:id="@+id/opposite_side_ev"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:hint="请输入收款方会员编号或者手机号"
            android:imeOptions="actionSearch"
            android:inputType="number"
            android:maxLines="1"
            android:padding="12dp"
            android:textColor="@color/app_text_color"
            android:textSize="14sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:text="收款方信息"
            android:textColor="@color/app_text_color" />

        <TextView
            android:id="@+id/opposite_real_name_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:padding="12dp"
            android:textColor="@color/app_text_color"
            android:textSize="14sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:text="转账金额        "
            android:textColor="@color/app_text_color" />

        <com.txd.hzj.wjlp.view.MyEditText
            android:id="@+id/tr_acc_money_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:hint="请输入转账金额"
            android:inputType="numberDecimal"
            android:padding="12dp"
            android:textColor="@color/app_text_color"
            android:textSize="14sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:text="支付密码        "
            android:textColor="@color/app_text_color" />

        <EditText
            android:id="@+id/pay_pwd_ev"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:inputType="textPassword"
            android:padding="12dp"
            android:textColor="@color/app_text_color"
            android:textSize="14sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="16dp"
        android:paddingBottom="4dp"
        android:paddingTop="4dp"
        android:visibility="visible">

        <TextView
            android:id="@+id/operation_type_tv21"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="转账金额必须为整数，每次系统自动扣除转账金额的1%作为综合服务费"
            android:textColor="@color/colorRed" />

    </LinearLayout>

    <TextView
        android:id="@+id/change_money_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="64dp"
        android:background="@drawable/shape_to_login_tv_shape"
        android:gravity="center"
        android:padding="12dp"
        android:text="转账"
        android:textColor="@color/white" />

</LinearLayout>
