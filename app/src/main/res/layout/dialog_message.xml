<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_money_item"
    android:orientation="vertical">

    <TextView
        android:id="@+id/messageDialog_title_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:paddingTop="16dp"
        android:text="提示标题信息"
        android:textColor="@color/black"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/messageDialog_message_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:layout_marginTop="15dp"
        android:gravity="center_horizontal"
        android:text="消息提示"
        android:textColor="@color/black"
        android:textSize="14sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#AAA" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/messageDialog_negative_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="10dp"
            android:text="取消"
            android:textColor="#007AFF"
            android:textSize="15sp" />

        <View
            android:id="@+id/messageDialog_btnLine_view"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#AAA" />

        <TextView
            android:id="@+id/messageDialog_positive_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="10dp"
            android:text="确认"
            android:textColor="#007AFF"
            android:textSize="15sp" />

    </LinearLayout>

</LinearLayout>
