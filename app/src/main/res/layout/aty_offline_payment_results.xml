<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include
        android:id="@+id/offlinePaymentResult_title"
        layout="@layout/aty_title" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- 头部 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="18dp"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/offlinePaymentResult_head_imgv"
                android:layout_width="70dp"
                android:layout_height="70dp"
                tools:src="@mipmap/icon_header_img" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="11dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="向商家（"
                    android:textColor="#222222"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/offlinePaymentResult_shopName_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#222222"
                    android:textSize="14sp"
                    tools:text="悠悠店铺" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="）付款"
                    android:textColor="#222222"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="时间："
                    android:textColor="#999999"
                    android:textSize="11sp" />

                <TextView
                    android:id="@+id/offlinePaymentResult_payTime_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#999999"
                    android:textSize="11sp"
                    tools:text="2018-07-20 15:30" />
            </LinearLayout>
        </LinearLayout>

        <!-- 中间 -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/offlinePaymentResult_resultImg_imgv"
                android:layout_width="40dp"
                android:layout_height="40dp"
                tools:src="@mipmap/icon_offline_payment_results_img" />

            <TextView
                android:id="@+id/offlinePaymentResult_resultText_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textColor="#1EAE1C"
                android:textSize="16sp"
                tools:text="支付成功" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:text="¥"
                    android:textColor="#343434"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/offlinePaymentResult_money_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="15dp"
                    android:textColor="#343434"
                    android:textSize="26sp"
                    tools:text="22.00" />
            </LinearLayout>
        </LinearLayout>

        <!-- 底部 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="50dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/offlinePaymentResult_goOrder_tv"
                android:layout_width="130dp"
                android:layout_height="32dp"
                android:layout_margin="18dp"
                android:background="@drawable/shape_payment_results_checkorder"
                android:gravity="center"
                android:text="查看订单"
                android:textColor="#F23030"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/offlinePaymentResult_goBack_tv"
                android:layout_width="130dp"
                android:layout_height="32dp"
                android:layout_margin="18dp"
                android:background="@drawable/shape_payment_results_gohome"
                android:gravity="center"
                android:text="返回首页"
                android:textColor="#FD8002"
                android:textSize="14sp" />
        </LinearLayout>

    </RelativeLayout>

</LinearLayout>
