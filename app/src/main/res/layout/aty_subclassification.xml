<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color"
    android:orientation="vertical"
    tools:context=".mellonLine.SubclassificationAty">

    <include layout="@layout/aty_title"/>

    <Space
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

    <com.flyco.tablayout.SlidingTabLayout
        android:id="@+id/sub_classify_stl"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/white"
        app:tl_indicator_color="@color/theme_color"
        app:tl_textAllCaps="false"
        app:tl_textBold="NONE"
        app:tl_textsize="14sp"
        app:tl_textSelectColor="@color/theme_color"
        app:tl_textUnselectColor="@color/black"/>
    <android.support.v4.view.ViewPager
        android:id="@+id/sub_classify_vp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</LinearLayout>
