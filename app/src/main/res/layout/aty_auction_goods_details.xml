<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color"
    android:orientation="vertical"
    tools:context="com.txd.hzj.wjlp.mellOnLine.gridClassify.AuctionGoodsDetailsAty">

    <include layout="@layout/aty_title"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/auction_bottom_layout"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="1dp"/>

                <include layout="@layout/aty_banner"/>

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="8dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#F3ABA7"
                    android:drawablePadding="8dp"
                    android:drawableStart="@drawable/icon_time_count_down"
                    android:gravity="center_vertical"
                    android:padding="8dp"
                    android:text="正在进行 今天21:00结束"
                    android:textColor="@color/white"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:orientation="vertical"
                    android:padding="8dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="芬迪 FENDI包 芬迪 FENDI包 芬迪 FENDI包 芬迪 FENDI包芬迪 FENDI包 芬迪 FENDI包"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:layout_marginTop="8dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/auction_price_tv"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="当前价 ￥8000.00"
                            android:textColor="@color/colorAccent"/>

                        <TextView
                            android:id="@+id/auction_profit_num_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawableLeft="@drawable/icon_send"
                            android:drawablePadding="8dp"
                            android:text="分红权10.23"
                            android:textColor="@color/gray_text_color"
                            android:textSize="12sp"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:divider="@drawable/lin_layout_horizontal_line_shape"
                        android:orientation="horizontal"
                        android:showDividers="middle">

                        <TextView
                            android:id="@+id/on_lookers_tv"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.5"
                            android:text="围观 633 次"
                            android:textColor="@color/gray_text_color"/>

                        <TextView
                            android:id="@+id/be_sign_up_tv"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="报名 0 人"
                            android:textColor="@color/gray_text_color"/>

                        <TextView
                            android:id="@+id/set_remind_tv"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.5"
                            android:gravity="end"
                            android:text="设置提醒 15 人"
                            android:textColor="@color/gray_text_color"/>

                    </LinearLayout>
                </LinearLayout>

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="8dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:orientation="horizontal"
                    android:padding="8dp">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/left_tv_1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="起拍价     ￥8000.00"
                            android:textColor="@color/app_text_color"/>

                        <TextView
                            android:id="@+id/left_tv_2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="加价幅度 ￥500"
                            android:textColor="@color/app_text_color"/>

                        <TextView
                            android:id="@+id/left_tv_3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="开拍时间 06月15日 09:00"
                            android:textColor="@color/app_text_color"/>

                        <TextView
                            android:id="@+id/left_tv_4"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="保留价     无"
                            android:textColor="@color/app_text_color"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/righr_tv_1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="保证金     ￥500"
                            android:textColor="@color/app_text_color"/>

                        <TextView
                            android:id="@+id/righr_tv_2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="拍卖佣金 ￥500"
                            android:textColor="@color/app_text_color"/>

                        <TextView
                            android:id="@+id/righr_tv_3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="结束时间 06月15日 09:00"
                            android:textColor="@color/app_text_color"/>

                        <TextView
                            android:id="@+id/righr_tv_4"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="延时周期     无"
                            android:textColor="@color/app_text_color"/>

                    </LinearLayout>

                </LinearLayout>

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="8dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:padding="8dp">

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/icon_temp_mell_head"/>

                    <TextView
                        android:id="@+id/mell_name_and_grade_tv"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:lineSpacingExtra="4dp"
                        android:padding="8dp"
                        android:text="ZARA\n评分4.5分"
                        android:textColor="@color/gray_text_color"
                        android:textSize="12sp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/shape_tag_normal_bg"
                        android:padding="8dp"
                        android:text="进店逛逛"/>

                </LinearLayout>

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="8dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="8dp"
                        android:text="拍卖记录"
                        android:textColor="@color/app_text_color"/>

                    <TextView
                        android:id="@+id/user_auction_id_tv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="end"
                        android:padding="8dp"
                        android:text="您的出价ID: 321860"
                        android:textColor="@color/gray_text_color"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/colorAccent"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:padding="8dp"
                        android:text="出价人"
                        android:textColor="@color/white"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:padding="8dp"
                        android:text="出价ID"
                        android:textColor="@color/white"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:padding="8dp"
                        android:text="价格"
                        android:textColor="@color/white"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:padding="8dp"
                        android:text="出价时间"
                        android:textColor="@color/white"/>
                </LinearLayout>

                <com.ants.theantsgo.view.inScroll.ListViewForScrollView
                    android:id="@+id/auction_info_lv"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/white"
                    android:divider="@color/white"
                    android:dividerHeight="8dp"
                    android:scrollbars="none"/>

            </LinearLayout>

        </ScrollView>

        <LinearLayout
            android:id="@+id/auction_bottom_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/white"
                android:drawablePadding="4dp"
                android:drawableTop="@drawable/icon_goods_kf"
                android:gravity="center"
                android:padding="8dp"
                android:text="咨询"
                android:textSize="12sp"/>

            <Space
                android:layout_width="2dp"
                android:layout_height="match_parent"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/white"
                android:drawablePadding="4dp"
                android:drawableTop="@drawable/icon_tips_gray"
                android:gravity="center"
                android:padding="8dp"
                android:text="提醒"
                android:textSize="12sp"/>

            <TextView
                android:id="@+id/sing_up_tv"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:background="@color/colorAccent"
                android:gravity="center"
                android:text="去报名\n(保证金金额￥500)"
                android:textColor="@color/white"/>

        </LinearLayout>

    </RelativeLayout>

</LinearLayout>
