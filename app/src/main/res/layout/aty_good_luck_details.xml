                <TextView
                    android:id="@+id/to_chat_tv"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawablePadding="4dp"
                    android:drawableTop="@drawable/icon_goods_kf"
                    android:gravity="center"
                    android:text="客服" />

