<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color"
    android:orientation="vertical"
    tools:context="com.txd.hzj.wjlp.mellOnLine.OrderAndInformMessageListAty">

    <include layout="@layout/aty_title"/>

    <com.ants.theantsgo.view.pulltorefresh.PullToRefreshListView
        android:id="@+id/message_lv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="@color/bg_color"
        android:dividerHeight="8dp"
        android:padding="16dp"
        android:scrollbars="none"
        app:ptrMode="both"/>

    <include layout="@layout/aty_no_data_layout"/>

</LinearLayout>
