<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E5E5E5"
    android:orientation="vertical">

    <include layout="@layout/aty_shop_title" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="8dp" />

    <RelativeLayout
        android:id="@+id/shop_set_ima"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingEnd="16dp"
        android:paddingStart="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="店铺头像"
            android:textColor="@color/hint_text_color"
            android:textSize="13sp" />

        <cn.gavinliu.android.lib.shapedimageview.ShapedImageView
            android:id="@+id/img_head"
            android:layout_width="71dp"
            android:layout_height="71dp"
            android:layout_marginBottom="17dp"
            android:layout_marginRight="32dp"
            android:layout_marginTop="17dp"
            android:layout_alignParentRight="true"
            app:shape_mode="circle"
             />

        <ImageView
            android:id="@+id/shop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/icon_turn_right_gray" />
    </RelativeLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="1dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingBottom="16dp"
        android:paddingStart="16dp"
        android:paddingTop="16dp">

        <TextView
            android:id="@+id/shop_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="店铺名称"
            android:textColor="@color/hint_text_color"
            android:textSize="13sp" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_toRightOf="@+id/shop_name"
            android:text="水晶家坊"
            android:lines="1"
            android:hint="请输入店铺名称"
            android:maxLength="6"
            android:background="@null"
            android:textColor="@color/black"
            android:textSize="17sp" />
    </RelativeLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="1dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="193dp"
        android:background="@color/white"
        android:padding="16dp">

        <TextView
            android:id="@+id/shop_introduce"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="店铺简介"
            android:textColor="@color/hint_text_color"
            android:textSize="13sp" />

        <EditText
            android:id="@+id/shop_introduces"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="40dp"
            android:layout_marginStart="33dp"
            android:background="@null"
            android:text="请输入店铺简介请输入店铺简介请输入店铺简介请输入店铺简介请输入店铺简介请输入店铺简介请输入店铺简介请输入店铺简介请输入店铺简介请输入店铺简介请输入店铺简介请输入店铺简介请输入店铺简介请输入店铺简介请输入店铺简介"
            android:layout_toRightOf="@+id/shop_introduce"
            android:textColor="@color/shop_text_color"
            android:hint="请输入店铺简介"
            android:textSize="17sp" />

    </RelativeLayout>
</LinearLayout>