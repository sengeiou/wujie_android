<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:gravity="center"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/cart_goods_select_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:src="@drawable/icon_cart_goods_unselect" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/lin_goods"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="8dp">

            <ImageView
                android:id="@+id/im_goods"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/icon_temp_goods_banner" />

            <LinearLayout
                android:id="@+id/cart_goods_info_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="8dp"
                android:visibility="visible">

                <TextView
                    android:id="@+id/goods_name_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:text="太平鸟2014太平鸟2014太平鸟2014太平鸟2014太平鸟2014"
                    android:textColor="@color/app_text_color" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/goods_attrs_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:text="M 黑色"
                        android:textColor="@color/app_text_color" />

                    <TextView
                        android:id="@+id/goods_jifen_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="3dp"
                        android:text="显示积分"
                        android:textColor="@color/colorOrange"
                        android:textSize="10sp" />
                </LinearLayout>

                <android.support.v4.widget.Space
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/cart_goods_price_tv"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:text="$120.00"
                        android:textColor="@color/colorAccent" />

                    <TextView
                        android:id="@+id/cart_goods_num_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="x1"
                        android:textColor="@color/gray_text_color" />

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/cart_num_attrs_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:padding="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/goods_num_reduce"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:src="@drawable/icon_cart_goods_num_reduce" />

                    <TextView
                        android:id="@+id/operation_goods_num_tv"
                        android:layout_width="0dp"
                        android:layout_height="30dp"
                        android:layout_weight="2"
                        android:background="@drawable/shapre_cart_goods_num_tv"
                        android:gravity="center"
                        android:text="1"
                        android:textColor="@color/app_text_color" />


                    <ImageView
                        android:id="@+id/goods_num_increase_tv"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:src="@drawable/icon_cart_goods_num_increase" />

                </LinearLayout>

                <TextView
                    android:id="@+id/reset_goods_attrs_tv"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/shapre_cart_goods_num_tv"
                    android:drawableEnd="@drawable/icon_hide_other_layout"
                    android:gravity="center_vertical"
                    android:padding="4dp"
                    android:text="1"
                    android:textColor="@color/app_text_color" />
            </LinearLayout>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/bg_color" />
    </LinearLayout>

</LinearLayout>