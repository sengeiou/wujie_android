<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="8dp">

    <TextView
        android:id="@+id/use_coupon_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:background="@drawable/shape_tv_bg_by_orange"
        android:paddingBottom="4dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:paddingTop="4dp"
        android:text="可使用30%购物券"
        android:textColor="@color/white"
        android:textSize="12sp"
        android:visibility="gone"/>

    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:scaleType="centerCrop"
        android:src="@drawable/icon_temp_watch"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="2"
        android:text="Seagull海鸥手表男士自动机械手表飞轮男表防水皮带"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:gravity="bottom"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/peice_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="￥13800.00"
            android:textColor="@color/theme_color"
            android:textSize="14sp"/>

        <TextView
            android:id="@+id/older_price_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:text="￥18800.00"
            android:textColor="@color/gray_text_color"
            android:textSize="12sp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/jf_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/icon_send"
            android:drawablePadding="8dp"
            android:text="积分"

            android:textColor="@color/gray_text_color"
            android:textSize="12sp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10.23"
            android:textColor="#FD8214"
            android:textSize="12sp"
            />

        <Space
            android:layout_width="0dp"
            android:layout_height="2dp"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/limit_remeber_me_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_remember_me"
            android:drawablePadding="4dp"
            android:drawableStart="@drawable/icon_rember_me"
            android:gravity="center"
            android:padding="4dp"
            android:text="提醒我"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/sold_num_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="已售2345件"
            android:textColor="@color/gray_text_color"
            android:textSize="12sp"/>

    </LinearLayout>
</LinearLayout>