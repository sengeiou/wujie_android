<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="80dp"
    android:layout_height="80dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/viewPanel_bg_imgv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:src="@mipmap/square_marquee_square" />

        <LinearLayout
            android:id="@+id/viewPanel_prize_llayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/viewPanel_prize_imgv"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                tools:src="@mipmap/ic_launcher_round" />

            <TextView
                android:id="@+id/viewPanel_content_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:maxLength="5"
                android:textColor="#000000"
                tools:text="抽奖抽奖抽奖抽奖抽奖抽奖抽奖" />
        </LinearLayout>

        <ImageView
            android:id="@+id/viewPanel_fail_imgv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="15dp"
            android:visibility="gone" />

    </RelativeLayout>

    <View
        android:id="@+id/viewPanel_overlay_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#88FFFFFF"
        android:visibility="gone" />

</FrameLayout>
