<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="bottom"
    android:background="@drawable/shape_main_pop_window_bg"
    android:orientation="vertical"
    android:id="@+id/lay">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:orientation="horizontal">

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:padding="12dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/main_wj_shop_iv"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:src="@drawable/icon_wj_shop_hzj"
            android:layout_height="wrap_content"/>
        <ImageView
            android:id="@+id/welfare_service_iv"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:src="@drawable/icon_wj_fls_hzj"
            android:layout_height="wrap_content"/>
        <ImageView
            android:id="@+id/main_wj_hatch_iv"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:src="@drawable/icon_wj_ssfh_hzj"
            android:layout_height="wrap_content"/>
        <ImageView
            android:id="@+id/recruit_stockholder_iv"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:src="@drawable/icon_wj_zmgd_hzj"
            android:layout_height="wrap_content"/>


    </LinearLayout>
</LinearLayout>