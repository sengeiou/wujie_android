<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/title_re_layout"
    android:layout_width="match_parent"
    android:layout_height="48dp"
    android:background="@color/white"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/title_be_back_iv"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:onClick="beBack"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:src="@drawable/icon_be_back_b" />

    <TextView
        android:id="@+id/titlt_conter_tv"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:ellipsize="middle"
        android:gravity="center"
        android:maxLength="8"
        android:visibility="visible"
        android:text="零食"
        android:textColor="@color/app_text_color"
        android:textSize="20sp" />
    <LinearLayout
        android:id="@+id/shop_person_title_manage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/titleColors"
        android:visibility="gone"
        android:layout_centerInParent="true"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/shop_shopkeeper"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="1dp"
            android:background="@color/titleColors"
            android:textColor="@color/white"
           android:paddingStart="15dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:paddingEnd="15dp"
            android:text="店主身份"/>
        <TextView
            android:id="@+id/shop_person"
            android:layout_width="wrap_content"
            android:background="@color/white"
            android:layout_margin="1dp"
            android:textColor="@color/titleColors"
            android:paddingStart="15dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:paddingEnd="15dp"
            android:layout_height="wrap_content"
            android:text="普通顾客"/>
    </LinearLayout>

    <TextView
        android:id="@+id/titlt_right_tv"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:gravity="center"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:text="编辑"
        android:textColor="@color/app_text_color"
        android:textSize="16sp"
        android:visibility="gone" />
    <TextView
        android:id="@+id/goods_title_share_tv"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:drawablePadding="4dp"
        android:gravity="center"
        android:textColor="@color/app_text_color"
        android:drawableTop="@drawable/icon_goods_title_share"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:text="分享"
        android:visibility="gone"
        android:textSize="12sp" />
</RelativeLayout>