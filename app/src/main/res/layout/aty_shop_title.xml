<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/title_re_layout"
    android:layout_width="match_parent"
    android:layout_height="48dp"
    android:background="@color/white"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/title_be_back_iv"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:onClick="beBack"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:src="@drawable/icon_be_back_b" />

    <TextView
        android:id="@+id/titlt_conter_tv"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:ellipsize="middle"
        android:gravity="center"
        android:maxLength="8"
        android:text="零食"
        android:textColor="#ff323232"
        android:textSize="17sp"
        android:visibility="visible" />

    <LinearLayout
        android:id="@+id/shop_person_title_manage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerInParent="true"
        android:background="@color/white"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/shop_shopkeeper"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/shop_title_choice_left"
            android:paddingBottom="9dp"
            android:paddingEnd="27dp"
            android:paddingStart="27dp"
            android:paddingTop="9dp"
            android:text="店主身份"
            android:textColor="@color/white"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/shop_person"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/shop_title_unchoice_right"
            android:paddingBottom="9dp"
            android:paddingEnd="27dp"
            android:paddingStart="27dp"
            android:paddingTop="9dp"
            android:textColor="#ffd21f18"
            android:text="普通顾客"
            android:textSize="14sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/titlt_right_tv"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:gravity="center"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:text="编辑"
        android:textColor="@color/app_text_color"
        android:textSize="16sp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/goods_title_share_tv"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:drawablePadding="4dp"
        android:drawableTop="@drawable/icon_goods_title_share"
        android:gravity="center"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:text="分享"
        android:textColor="@color/app_text_color"
        android:textSize="12sp"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/time_select_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:visibility="gone"
        android:layout_marginEnd="13dp"
        android:src="@drawable/time_select" />
</RelativeLayout>