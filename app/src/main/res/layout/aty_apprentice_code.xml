<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rootLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#7f000000"
    tools:context="com.txd.hzj.wjlp.minetoAty.dialog.ApprenticeCodeAty">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginEnd="30dp"
        android:layout_marginStart="30dp"
        android:background="@drawable/shape_r_code_bg_hzj"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingBottom="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/code_user_head_iv"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/icon_temp_mine_head_hzj"
                android:visibility="gone" />

            <TextView
                android:id="@+id/member_trainerTv"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="12dp"
                android:text="商家拜师码"
                android:textColor="@color/selector_txt"
                android:visibility="visible" />

            <View
                android:layout_width="1dp"
                android:layout_height="70dp"
                android:layout_weight="0.01"
                android:background="@color/bg_color" />

            <TextView
                android:id="@+id/merchant_trainerTv"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="会员拜师码"
                android:textColor="@color/selector_txt"
                android:visibility="visible" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="end|center_vertical"
                android:text="拜师码"
                android:textColor="@color/app_text_color"
                android:visibility="gone" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/bg_color" />

        <ImageView
            android:id="@+id/user_code_iv"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_marginBottom="12dp"
            android:layout_marginTop="12dp"
            android:src="@drawable/icon_temp_my_code_hzj" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="12dp"
            android:text="扫描二维码进行拜师"
            android:textColor="@color/app_text_color" />
    </LinearLayout>

</FrameLayout>
