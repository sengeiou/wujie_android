<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    android:clipToPadding="true"
    android:fitsSystemWindows="true">
    <include
        layout="@layout/aty_title"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/lin_bottom">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <com.ants.theantsgo.view.inScroll.ListViewForScrollView
                    android:id="@+id/lv_details"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:divider="#ffffffff"></com.ants.theantsgo.view.inScroll.ListViewForScrollView>
            </LinearLayout>
        </ScrollView>
        <LinearLayout
            android:id="@+id/lin_bottom"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:layout_margin="10dp">
            <TextView
                android:id="@+id/tv_btn_left"
                android:padding="6dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="取消订单"
                android:visibility="gone"
                android:background="@drawable/shape_gray_btn_li"/>
            <TextView
                android:id="@+id/tv_btn_right"
                android:layout_marginLeft="10dp"
                android:padding="6dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="删除订单"
                android:visibility="gone"
                android:textColor="@color/holo_red_light"
                android:background="@drawable/shape_red_btn_bg"/>
        </LinearLayout>
    </RelativeLayout>


</LinearLayout>
