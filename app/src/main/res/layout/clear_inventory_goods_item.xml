<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.CardView
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="6dp"
        android:background="@color/white"
        app:cardCornerRadius="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/picImg"
                    android:layout_width="80dp"
                    android:layout_height="79dp"
                    android:src="@drawable/icon_temp_house"
                    />
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_marginStart="11dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/titleTv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="50dp"
                            android:lineSpacingExtra="4dp"
                            android:text="百草味零食大礼包女小吃一整箱休闲食品铺买一箱送好吃不贵混合装"
                            android:textColor="#ff333333"
                            android:textSize="11sp"
                            />
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_marginTop="8dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/descTv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="最多可使用10%红券"
                            android:textColor="#ffe85f1e"
                            android:textSize="11sp"
                            android:padding="2dp"
                            android:background="#fffeedeb"
                            />
                        <TextView
                            android:id="@+id/saleTv"
                            android:layout_alignParentEnd="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="寄售"
                            android:paddingStart="8dp"
                            android:paddingEnd="8dp"
                            android:background="@drawable/shape_red_btn_02_li"
                            android:textColor="#fffa5554"
                            android:textSize="12sp"
                            />
                    </RelativeLayout>

                    <LinearLayout
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="寄售额："
                            android:textColor="#ff999999"
                            android:textSize="11sp"
                            />
                        <TextView
                            android:id="@+id/salePriceTv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="¥99.00"
                            android:textColor="#FA5554"
                            android:textSize="11sp"
                            />
                        <TextView
                            android:layout_marginStart="8dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="利润："
                            android:textColor="#ff999999"
                            android:textSize="11sp"
                            />
                        <TextView
                            android:id="@+id/profitTv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="¥99.00"
                            android:textColor="#FA5554"
                            android:textSize="11sp"
                            />
                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_marginTop="10dp"
                android:background="@color/line_color"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>

            <RelativeLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/numTv1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="可寄售件数：5"
                        android:textColor="#ff333333"
                        android:textSize="11sp"
                        />
                    <TextView
                        android:id="@+id/numTv4"
                        android:layout_marginTop="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="可在线寄售数量：1"
                        android:textColor="#ff333333"
                        android:textSize="11sp"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_centerHorizontal="true"
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/numTv2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="已寄售件数：2"
                        android:textColor="#ff333333"
                        android:textSize="11sp"
                        />
                    <TextView
                        android:id="@+id/numTv5"
                        android:layout_marginTop="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="已在线寄售数量：0.5"
                        android:textColor="#ff333333"
                        android:textSize="11sp"
                        />
                </LinearLayout>
                <TextView
                    android:id="@+id/numTv3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:text="指数：3"
                    android:textColor="#ff333333"
                    android:textSize="11sp"
                    />
            </RelativeLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</FrameLayout>