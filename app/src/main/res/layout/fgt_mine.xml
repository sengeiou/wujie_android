            <LinearLayout
                android:id="@+id/mell_point_lin_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:divider="@drawable/lin_layout_vertical_line_shape"
                android:orientation="vertical"
                android:paddingStart="12dp"
                android:showDividers="middle">

                <TextView
                    android:id="@+id/stock_record_tv"
                    style="@style/mine_text_list"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableEnd="@drawable/icon_turn_right_gray"
                    android:drawablePadding="8dp"
                    android:drawableStart="@drawable/icon_stock_left"
                    android:paddingBottom="12dp"
                    android:paddingEnd="12dp"
