                android:layout_marginRight="20dp"
                android:background="@color/bg_color"></View>

            <TextView
                android:id="@+id/address_tv"
                style="@style/mine_text_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/icon_mine_dizhi"
                android:drawablePadding="10dp"
                android:drawableRight="@drawable/icon_turn_right_gray"
                android:padding="12dp"
                android:text="收货地址"
                android:textColor="@color/black"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@color/bg_color"></View>

            <TextView
                style="@style/mine_text_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/icon_mine_pingjia"
                android:drawablePadding="10dp"
                android:drawableRight="@drawable/icon_turn_right_gray"
                android:padding="12dp"
                android:text="我的评价"
                android:textColor="@color/black"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="8dp"
                android:background="@color/bg_color"/>


            <TextView
                android:id="@+id/textView3"
                style="@style/mine_text_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:drawableLeft="@drawable/icon_mine_shuyuan"
                android:drawablePadding="10dp"
                android:drawableRight="@drawable/icon_turn_right_gray"
                android:padding="12dp"
                android:text="无界书院"
                android:textColor="@color/black"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@color/bg_color"></View>

            <TextView
                android:id="@+id/registration_code_tv"
                style="@style/mine_text_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/icon_mine_erweima"
                android:drawablePadding="10dp"
                android:drawableRight="@drawable/icon_turn_right_gray"
