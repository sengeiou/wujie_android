                android:text="商家推荐"
                android:textColor="@color/black"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="8dp"
                android:background="@color/bg_color"/>

            <TextView
                android:id="@+id/tv_help_center"
                style="@style/mine_text_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/icon_mine_help"
                android:drawablePadding="10dp"
                android:drawableRight="@drawable/icon_turn_right_gray"
                android:padding="12dp"
                android:text="帮助中心"
                android:textColor="@color/black"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@color/bg_color"></View>

            <TextView
                style="@style/mine_text_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/icon_mine_fankui"
                android:drawablePadding="10dp"
                android:drawableRight="@drawable/icon_turn_right_gray"
                android:padding="12dp"
                android:text="意见反馈"
                android:textColor="@color/black"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@color/bg_color"></View>

            <TextView
                style="@style/mine_text_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/icon_mine_guli"
                android:drawablePadding="10dp"
                android:drawableRight="@drawable/icon_turn_right_gray"
                android:padding="12dp"
                android:text="评分鼓励"
                android:textColor="@color/black"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@color/bg_color"></View>

            <TextView
                android:id="@+id/rel_mine_about"
                style="@style/mine_text_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/icon_mine_about"
                android:drawablePadding="10dp"
                android:drawableRight="@drawable/icon_turn_right_gray"
                android:padding="12dp"
