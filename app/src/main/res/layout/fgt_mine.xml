                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="20dp"
                            android:background="@drawable/shape_mine_identity_li"
                            android:drawablePadding="8dp"
                            android:drawableStart="@drawable/icon_point_left_hzj"
                            android:gravity="center"
                            android:paddingBottom="4dp"
                            android:paddingEnd="8dp"
                            android:paddingStart="8dp"
                            android:paddingTop="4dp"
                            android:text="无界驿站"
                            android:visibility="gone"/>

                        <LinearLayout
                            android:id="@+id/member_type_layout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:id="@+id/mine_member_type_tv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="20dp"
                                android:background="@drawable/shape_mine_identity_li"
                                android:drawablePadding="8dp"
                                android:drawableStart="@drawable/icon_putong"
                                android:gravity="center"
                                android:paddingBottom="4dp"
                                android:paddingEnd="8dp"
                                android:paddingStart="8dp"
                                android:paddingTop="4dp"
                                android:text="普通用户"/>

                            <TextView
                                android:id="@+id/grade_of_member_tv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/shape_mine_identity_li"
                                android:drawablePadding="8dp"
                                android:drawableStart="@drawable/icon_jinpai"
                                android:gravity="center"
                                android:paddingBottom="4dp"
                                android:paddingEnd="8dp"
                                android:paddingStart="8dp"
                                android:paddingTop="4dp"
                                android:text="金牌会员"/>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/uset_other_info_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="20dp"
