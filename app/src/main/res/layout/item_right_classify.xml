<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:padding="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/child_cate_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_right_classify_tv"
            android:drawablePadding="6dp"
            android:drawableStart="@drawable/icon_right_classify_left"
            android:gravity="center"
            android:paddingBottom="4dp"
            android:paddingEnd="32dp"
            android:paddingStart="4dp"
            android:paddingTop="4dp"
            android:text="零食"
            android:textColor="@color/white"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableEnd="@drawable/icon_turn_right_gray"
            android:drawablePadding="4dp"
            android:gravity="center_vertical|end"
            android:paddingBottom="6dp"
            android:paddingTop="6dp"
            android:text="查看更多"
            android:textColor="@color/gray_text_color"
            android:textSize="12sp"
            android:visibility="invisible"
            />
    </LinearLayout>

    <com.ants.theantsgo.view.inScroll.GridViewForScrollView
        android:id="@+id/classify_three_level_gv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:numColumns="3"
        android:scrollbars="none"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="12dp"
        android:paddingTop="12dp"
        android:text="热门品牌"
        android:textColor="#54AA66"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/hot_brand_rv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</LinearLayout>