<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.CardView
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="6dp"
        android:background="@color/white"
        app:cardCornerRadius="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/shopNameTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="凌凌漆专营店"
                    android:textColor="#ff333333"
                    android:textSize="12sp"
                    android:drawablePadding="5dp"
                    android:drawableEnd="@drawable/icon_right_arrow"
                    />
                <TextView
                    android:id="@+id/timeTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:text="2018-01-10 14:24:56"
                    android:textColor="#ff999999"
                    android:textSize="12sp"
                    />
            </RelativeLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_marginTop="17dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/picImg"
                    android:layout_width="80dp"
                    android:layout_height="79dp"
                    android:src="@drawable/icon_temp_house"
                    />
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_marginStart="11dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/titleTv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="50dp"
                            android:lineSpacingExtra="4dp"
                            android:text="百草味零食大礼包女小吃一整箱休闲食品铺买一箱送好吃不贵混合装"
                            android:textColor="#ff333333"
                            android:textSize="11sp"
                            />
                        <TextView
                            android:id="@+id/numTv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:text="x1"
                            android:textColor="#ff999999"
                            android:textSize="11sp"
                            />
                    </RelativeLayout>
                    <TextView
                        android:id="@+id/descTv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:text="30款零食组合（普通箱）"
                        android:textColor="#ff999999"
                        android:textSize="11sp"
                        />
                    <LinearLayout
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="寄售额："
                            android:textColor="#ff999999"
                            android:textSize="11sp"
                            />
                        <TextView
                            android:id="@+id/salePriceTv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="¥99.00"
                            android:textColor="#FA5554"
                            android:textSize="11sp"
                            />
                        <TextView
                            android:id="@+id/priceNameTv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="补差价："
                            android:layout_marginStart="5dp"
                            android:textColor="#ff999999"
                            android:textSize="11sp"
                            />
                        <TextView
                            android:id="@+id/priceTv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="¥99.00"
                            android:textColor="#FA5554"
                            android:textSize="11sp"
                            />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_marginTop="10dp"
                android:background="@color/line_color"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>
            <TextView
                android:id="@+id/totalTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="right"
                android:text="共1件商品\u3000合计：￥87.80"
                android:textColor="#ff333333"
                android:textSize="11sp"
                />
        </LinearLayout>
    </android.support.v7.widget.CardView>
</FrameLayout>