<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".distribution.shopFgt.ShopExhibitFragment">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="9dp"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="6dp"
            android:layout_marginTop="9dp"
            android:background="@drawable/shopexhibit"
            android:gravity="center_horizontal"
            android:orientation="vertical"/>

    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="9dp"
        android:background="@color/white"
        android:paddingTop="13dp"
        android:paddingBottom="13dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/internal_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="积分"
            android:drawableRight="@drawable/shopblgjiantou"
            android:gravity="right"
            android:drawablePadding="6dp"
            android:textColor="#ff333333"
            android:textSize="14sp" />
        <TextView
            android:id="@+id/cash_coupon_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="代金券"
            android:drawablePadding="6dp"
            android:drawableRight="@drawable/shopblgjiantou"
            android:gravity="right"
            android:textColor="#ff333333"
            android:textSize="14sp" />
        <TextView
            android:id="@+id/sales_volume_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="6dp"
            android:text="销量"
            android:drawableRight="@drawable/shopblgjiantou"
            android:gravity="right"
            android:textColor="#ff333333"
            android:textSize="14sp" />
        <TextView
            android:id="@+id/price_tv"
            android:layout_marginRight="26dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="价格"
            android:drawablePadding="6dp"
            android:drawableRight="@drawable/shopjiantou"
            android:gravity="right"
            android:textColor="#ffe71f19"
            android:textSize="14sp" />
    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:layout_marginTop="9dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></android.support.v7.widget.RecyclerView>

    <include layout="@layout/exhibit_fgt_item"/>

</LinearLayout>