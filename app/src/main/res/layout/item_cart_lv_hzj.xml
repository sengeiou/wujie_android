<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/mell_goods_all_select_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:src="@drawable/icon_cart_goods_unselect"/>

        <LinearLayout
            android:id="@+id/cart_into_mell_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/cart_mell_name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableEnd="@drawable/icon_turn_right_g"
                android:drawablePadding="8dp"
                android:drawableStart="@drawable/icon_cart_mell_left_hzj"
                android:gravity="center"
                android:text="太平鸟"/>
        </LinearLayout>
    </LinearLayout>

    <Space
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:layout_marginStart="40dp"/>

    <com.ants.theantsgo.view.inScroll.ListViewForScrollView
        android:id="@+id/cart_mell_goods_lv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="@null"
        android:background="@color/white"
        android:dividerHeight="0dp"
        android:scrollbars="none"/>
</LinearLayout>