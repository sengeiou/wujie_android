<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="fitXY"
            android:src="@mipmap/icon_redmption_success" />

        <TextView
            android:id="@+id/dialogRedmption_money_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:text="0"
            android:textColor="#FC575A"
            android:textSize="50sp" />

        <ImageView
            android:id="@+id/dialogRedmption_btn_imgv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/dialogRedmption_money_tv"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="95dp"
            android:scaleType="fitXY"
            android:src="@mipmap/icon_iknow_btn" />

    </RelativeLayout>

</LinearLayout>
