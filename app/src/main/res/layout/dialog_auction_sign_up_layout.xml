<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#7F000000"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="64dp">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_dialog_top_style"
        android:gravity="center"
        android:padding="16dp"
        android:text="抢拍"
        android:textColor="@color/app_text_color"
        android:textSize="16sp"/>

    <Space
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="24dp">

        <EditText
            android:id="@+id/auction_price_ev"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_edit_view_gray"
            android:hint="输入竞拍价格"
            android:inputType="numberDecimal"
            android:padding="12dp"
            android:textColor="@color/app_text_color"
            android:textColorHint="@color/hint_text_color"
            android:textSize="14sp"/>

    </LinearLayout>

    <TextView
        android:id="@+id/submit_auction_price_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_dialog_bottom_red"
        android:gravity="center"
        android:padding="16dp"
        android:text="确认出价"
        android:textColor="@color/white"
        android:textSize="16sp"/>


</LinearLayout>