<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color"
    android:orientation="vertical"
    tools:context="com.txd.hzj.wjlp.minetoAty.balance.BalanceAty">

    <include layout="@layout/aty_title" />

    <LinearLayout
        android:id="@+id/coupon_ll_vip"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include layout="@layout/aty_top_layout_for_mine" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:divider="@drawable/lin_layout_vertical_line_shape"
            android:orientation="vertical"
            android:paddingStart="12dp"
            android:showDividers="middle">

            <TextView
                android:id="@+id/recharge_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableEnd="@drawable/icon_turn_right_g"
                android:drawablePadding="8dp"
                android:drawableStart="@drawable/icon_recharge_hzj"
                android:paddingBottom="12dp"
                android:paddingEnd="12dp"
                android:paddingTop="12dp"
                android:text="充值"
                android:textColor="@color/app_text_color"
                android:visibility="gone" />

            <TextView
                android:id="@+id/withdraw_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableEnd="@drawable/icon_turn_right_g"
                android:drawablePadding="8dp"
                android:drawableStart="@drawable/icon_withdraw"
                android:paddingBottom="12dp"
                android:paddingEnd="12dp"
                android:paddingTop="12dp"
                android:text="提现"
                android:textColor="@color/app_text_color"
                android:visibility="gone" />

            <TextView
                android:id="@+id/give_accounts_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableEnd="@drawable/icon_turn_right_g"
                android:drawablePadding="8dp"
                android:drawableStart="@drawable/icon_transfer_accounts"
                android:paddingBottom="12dp"
                android:paddingEnd="12dp"
                android:paddingTop="12dp"
                android:text="赠送"
                android:textColor="@color/app_text_color" />

            <TextView
                android:id="@+id/give_details_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableEnd="@drawable/icon_turn_right_g"
                android:drawablePadding="8dp"
                android:drawableStart="@drawable/icon_integral_left_hzj"
                android:paddingBottom="12dp"
                android:paddingEnd="12dp"
                android:paddingTop="12dp"
                android:text="赠送明细"
                android:textColor="@color/app_text_color" />

        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/iv_vip"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:visibility="gone" />
</LinearLayout>
