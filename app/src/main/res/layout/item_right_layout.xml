<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_marginTop="13dp"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/picIv"
        android:layout_width="59dp"
        android:layout_height="59dp"
        android:src="@mipmap/ic_launcher"
        />
<LinearLayout
    android:orientation="vertical"
    android:layout_toRightOf="@id/picIv"
    android:layout_marginStart="12dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/nameTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="意大利烤香肠"
        android:textColor="#ff333333"
        android:textSize="14sp"
        />

    <LinearLayout
        android:layout_marginTop="8dp"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/specTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="选规格"
            android:paddingStart="5dp"
            android:paddingTop="3dp"
            android:paddingBottom="3dp"
            android:paddingEnd="5dp"
            android:background="@drawable/shape_red_wjyd"
            android:textColor="#ffffffff"
            android:textSize="10sp"
            />
        <TextView
            android:id="@+id/statusTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="选规格"
            android:layout_marginStart="8dp"
            android:paddingStart="5dp"
            android:paddingTop="3dp"
            android:paddingBottom="3dp"
            android:paddingEnd="5dp"
            android:background="@drawable/round_nine_grey"
            android:textColor="#ffffffff"
            android:textSize="10sp"
            />
    </LinearLayout>


    <LinearLayout
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/priceTv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="¥12.00/份"
            android:textColor="#333333"
            android:textSize="17sp"
            />

        <TextView
            android:id="@+id/priceTv2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="¥12.00/份"
            android:layout_marginStart="15dp"
            android:textColor="#333333"
            android:textSize="17sp"
            />
    </LinearLayout>
</LinearLayout>

    <ImageView
        android:layout_alignParentEnd="true"
        android:rotation="180"
        android:layout_marginEnd="17dp"
        android:layout_centerVertical="true"
        android:src="@drawable/icon_be_back_b"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>