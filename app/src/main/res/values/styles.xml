<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/theme_color</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>
    <!-- 限量购Tab样式 -->
    <style name="TabLayoutTextStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:lineSpacingExtra">1dp</item>
    </style>


    <!--0.5dp高度的View-->
    <style name="line_view">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.5dp</item>
        <item name="android:background">#DDDDDD</item>
    </style>

    <!--10dp高度的View-->
    <style name="line_view_h">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">10dp</item>
        <item name="android:background">#F6F6F6</item>
    </style>

    <!--房产购筛选-->
    <style name="menu_screen">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:padding">10dp</item>
        <item name="android:button">@null</item>
        <item name="android:textColor">@drawable/selector_tab_text_color</item>
        <item name="android:gravity">center</item>
    </style>


    <!--房产购详情页顶部 chen-->
    <style name="hous_tab_detail">
        <item name="android:gravity">center</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:button">@null</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@drawable/selector_tab_text_color</item>
        <item name="android:drawablePadding">10dp</item>
        <item name="android:drawableBottom">@drawable/selector_home_line_chen</item>
    </style>
    <style name="mine_text_list">
        <item name="android:textSize">16dp</item>
        <item name="android:textColor">@color/black</item>
    </style>
</resources>
